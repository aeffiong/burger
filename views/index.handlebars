<div class="container">
    <div class="row">
        <div class="col-6 text-center">
            <h1>Eat da Burger!</h1>
        </div>
        <div class="col-6 text-center">
            <div class="row">
                {{#each burgers}}
                    {{#unless this.devoured}}
                <div class="col-9 text-center">
                    {{this.id}}. {{this.burger_name}}
                </div>
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                    <input type="hidden" name="id" type="text" value={{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">Devour It!</button>
                </form>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>



<h2>Add a Burger</h2>
<div>
  <form action="/burgers" method="POST">
  	<input type="text" id="name" name="burger_name" placeholder="Yummy Burger">
  	<button type="submit" class="addBurger">Add Burger</button>
  </form>
</div>
</div>